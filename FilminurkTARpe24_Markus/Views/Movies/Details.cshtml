@model FilminurkTARpe24_Markus.Models.Movies.MoviesDeleteViewModel

<h1>Filmi info</h1>

<div>
	<h4>Filmi info</h4>
	<hr />


	<dl class="row">
		<div class="form-group-row">
			<label asp-for="ID" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.ID)
		</div>
	</dl>
	<dl class="row">
		<div class="form-group-row">
			<label asp-for="Title" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.Title)
		</div>
	</dl>
	<dl class="row">
		<div class="form-group-row">
			<label asp-for="Description" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.Description)
		</div>
	</dl>
	<dl class="row">
		<div class="form-group-row">
			<label asp-for="FirstPublished" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.FirstPublished)
		</div>
	</dl>
	</dl>
	<dl class="row">
		<div class="form-group-row">
			<label asp-for="Director" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.Director)
		</div>
	</dl>
	</dl>
	<dl class="row">
		<div class="form-group-row">
			<label asp-for="CurrentRating" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.CurrentRating)
		</div>
	</dl>
	</dl>
	<dl class="row">
		<div class="form-group-row">
			<label asp-for="TimesWatched" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.TimesWatched)
		</div>
	</dl>
	</dl>
	<dl class="row">
		<div class="form-group-row">
			<label asp-for="Length" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.Length)
		</div>
	</dl>
	</dl>
	<dl class="row">
		<div class="form-group-row">
			<label asp-for="Budget" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.Budget)
		</div>
	</dl>

	<dl>
		@foreach (var images in Model.Images)
		{
			<partial name="_Images" model="images" />
		}
	</dl>

	<hr />

	<a asp-action="Index" asp-controller="Movies" class="btn btn-danger">Tagasi</a>
</div>